<div class="container">
  <div class="row mx-auto">
    <div class="col-md-8">
    <div class="card mt-4 mb-2 p-2">
      <div class="card-title h3">Event Title: <%= @event.title %></div>
      <hr>
      <div class="card-content"><%= @event.desc %></div>
      <div class="card-subtitle mr-4 mt-4">Creator: <%= @creator.name %> <span class="ml-4">Event Date: <%= @event.event_date%></span> </div>
    </div>
    <Button class="btn btn-warning"><%= link_to "Add New Invitation", new_invitation_path, class: "text-white" %></Button>
    <div class="invited-list p-2">
    <h4>Invited Members</h4>
    <p><%= show_invitees(@invitees) %></p>
    </div>
    </div>
  </div>
</div>

